---
import HeaderPortrait from './HeaderPortrait.svelte';
import HeaderHeading from './HeaderHeading.astro';
import HeaderText from './HeaderText.astro';
---

<header
  class="min-vh-100 px-3 py-5 flex-maximize align-items-center text-lowercase bg-white"
  id="intro"
>
  <article class="container d-grid">
    <HeaderPortrait client:visible />
    <HeaderHeading />
    <HeaderText />
  </article>
</header>

<style>
  header {
    background-image: url('/bg.png');
  }

  .d-grid {
    display: grid;
  }
  @media only screen and (min-width: 0px) {
    .d-grid {
      grid-template-areas:
        'heading'
        'portrait'
        'text';
    }
  }
  @media only screen and (min-width: 576px) {
    .d-grid {
      grid-template-areas:
        'heading  .        .        .   '
        'portrait portrait portrait text'
        'portrait portrait portrait text'
        'portrait portrait portrait text'
        'portrait portrait portrait .   ';
    }
  }
  @media only screen and (min-width: 992px) {
    .d-grid {
      grid-template-areas:
        'portrait portrait portrait .      '
        'portrait portrait portrait .      '
        'portrait portrait portrait text   '
        'portrait portrait portrait heading';
    }
  }
</style>
