---
import HTML from '../layouts/HTML.astro';
import Header from '../components/Header.astro';
import Main from '../components/Main.astro';
import strings, { decrypt } from '../strings.js';
---

<HTML title={decrypt(strings.NAME)}>
  <Header />
  <Main />

  <footer class="text-light view">
    <h2>contact</h2>
    <p>flavor-text</p>
    <p>address</p>
    <p>number</p>
    <p>email</p>
    <p>socials</p>
  </footer>
</HTML>

<style>
  .view {
    min-height: 100vh;
    background-image: url('/bg.png');
  }

  footer.view {
    --overlay-color-values: 0 0 0;
    --overlay-color-opacity: 25%;
    --overlay-color: rgb(
      var(--overlay-color-values) / var(--overlay-color-opacity)
    );
    --overlay: linear-gradient(var(--overlay-color), var(--overlay-color));

    background-image: var(--overlay), url('/bg-footer.jpg');
    background-size: cover;
    background-repeat: no-repeat;
    background-attachment: fixed;
    background-position: 24%;

    padding: 1.5rem;
    padding-top: 3rem;
    padding-left: calc(100% * calc(2 / 3));
  }
</style>
