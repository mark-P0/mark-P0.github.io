---
import HTML from '../layouts/HTML.astro';
import ProjectCard from '../components/ProjectCard.astro';
import strings, { decrypt } from '../strings.js';
---

<HTML title={decrypt(strings.NAME)}>
  <header class="view">
    <div id="image">image</div>
    <div id="whoami">whoami</div>
    <div id="name">name</div>
  </header>

  <main class="view">
    <article id="projects">
      <h2>What I do</h2>
      <div id="project-list">
        <ProjectCard />
        <ProjectCard />
        <ProjectCard />
        <ProjectCard />
        <ProjectCard />
        <ProjectCard />
      </div>
    </article>
  </main>

  <footer class="text-light view">
    <h2>contact</h2>
    <p>flavor-text</p>
    <p>address</p>
    <p>number</p>
    <p>email</p>
    <p>socials</p>
  </footer>
</HTML>

<style>
  .view {
    min-height: 100vh;
    background-image: url('/bg.png');
  }

  header.view {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr min-content;
    grid-template-areas:
      'image whoami'
      'image name';
    /* display: none; */
  }
  header.view #image {
    grid-area: image;
  }
  header.view #whoami {
    grid-area: whoami;
  }
  header.view #name {
    grid-area: name;
  }

  main.view #projects {
    height: 100%;
  }
  main.view #project-list {
    height: 100%;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(2, 1fr);
    gap: 1rem;
    padding: 0 3rem;
  }

  footer.view {
    --overlay-color-values: 0 0 0;
    --overlay-color-opacity: 25%;
    --overlay-color: rgb(
      var(--overlay-color-values) / var(--overlay-color-opacity)
    );
    --overlay: linear-gradient(var(--overlay-color), var(--overlay-color));

    background-image: var(--overlay), url('/bg-footer.jpg');
    background-size: cover;
    background-repeat: no-repeat;
    background-attachment: fixed;
    background-position: 24%;

    padding: 1.5rem;
    padding-top: 3rem;
    padding-left: calc(100% * calc(2 / 3));
  }
</style>
