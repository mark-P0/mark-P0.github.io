---
import '../bootstrap.astro';
import '../styles/utilities.css';
import '../styles/fonts.css';
import '../styles/scrollbars.css';
import OGPMetaTags from '../components/OGPMetaTags.astro';
import Navigation from '../components/Navigation.astro';
import Header from '../components/Header.astro';
import Main from '../components/Main.astro';
import Footer from '../components/Footer.astro';
import { decrypt, NAME, HEADER_TEXT } from '../strings.js';

const title = decrypt(NAME);
const description = HEADER_TEXT.map(decrypt).join(' ');
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />

    {
      /**
       * The following raises errors with TypeScript.
       * It actually works, but the language tools does not seem to support it yet...
       * https://github.com/withastro/prettier-plugin-astro#astro-allow-shorthand
       * https://github.com/withastro/language-tools/issues/225
       */
    }
    {/* @ts-ignore */}
    <OGPMetaTags {title} {description} />

    <title>{title}</title>
  </head>

  <body>
    <Navigation>
      <Header />
      <Main />
      <Footer />
    </Navigation>
  </body>
</html>

<style is:global>
  /* Bootstrap Overrides */
  :root {
    --bs-primary-rgb: 25, 35, 55;
    --bs-link-color: rgb(var(--bs-primary-rgb));
    --bs-body-color: rgb(50 50 50);
    --bs-body-font-family: PTSans;
  }

  .border-stylized {
    /*  Bootstrap's `border-2` (2px) class
     *  2/16 = 0.125
     *  1rem = 16px (usually)
     */
    border: 0.125rem solid;

    border-top: none;
    border-left: none;
  }

  a,
  a:hover {
    color: inherit;
    text-decoration: inherit;
  }
</style>
